<body>
    <div class="text-center container mt-5">
        <div class="row">
            <div class="col-md"></div>
            <div class="col-md">
                    <div class="card">
                        <div class="card-header">
                            OTP Verification
                        </div>
                            <div class="card-body">
                                <h5 class="h5-responsive text-info">Your OTP is send to your registered Mobile No</h5>
                                <form>
                                <input type="hidden" name="dept" value="<%= dept %>">
                                <input type="hidden" name="year" value="<%= year %>">
                                <input type="hidden" name="div" value="<%= div %>">
                                <input type="hidden" name="clg_id" value="<%= clg_id %>">
                                <div class="md-form md-outline">
                                    <input type="text" id="otp" class="form-control">
                                    <label for="otp">Enter OTP</label>
                                    <p class="text-danger" style="display: none">Wrong OTP</p>
                                </div> 
                            </div>
                            <div class="card-footer">
                                    <button class="btn btn-sm" onclick="myFunction()">Submit</button>
                                </form>
                            </div>
                            <div id="sign-in-button"></div>
                        </div>  
            </div>
            <div class="col-md"></div>
        </div>
    </div>
       <!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
